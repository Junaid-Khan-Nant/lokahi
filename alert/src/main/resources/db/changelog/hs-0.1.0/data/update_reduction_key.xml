<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet id="add-alert-condition-id-to-reduction-key" author="vserrago">
        <update tableName="event_definition">
            <column
                name="reduction_key"
                value="%s:%s:%d:%d"/>
            <where>
                reduction_key = '%s:%s:%d'
            </where>
        </update>
        <update tableName="alert_definition">
            <column
                name="reduction_key"
                valueComputed="alert_definition.reduction_key || ':%d'"/>
            <where>
                reduction_key similar to '[^:]+:[^:]:+[^:]+'
            </where>
        </update>

