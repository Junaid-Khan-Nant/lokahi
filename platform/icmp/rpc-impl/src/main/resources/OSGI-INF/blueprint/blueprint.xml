<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="pingerFactory" interface="org.opennms.netmgt.icmp.PingerFactory" />
    <reference id="rpcClientFactory" interface="org.opennms.horizon.ipc.rpc.api.RpcClientFactory" />

    <bean id="pingProxyRpcModule" class="org.opennms.netmgt.icmp.proxy.impl.PingProxyRpcModule">
        <property name="pingerFactory" ref="pingerFactory" />
    </bean>
    <service interface="org.opennms.horizon.ipc.rpc.api.RpcModule" ref="pingProxyRpcModule"/>

    <bean id="pingSweepRpcModule" class="org.opennms.netmgt.icmp.proxy.impl.PingSweepRpcModule">
        <property name="pingerFactory" ref="pingerFactory" />
    </bean>
    <service interface="org.opennms.horizon.ipc.rpc.api.RpcModule" ref="pingSweepRpcModule"/>

    <service interface="org.opennms.netmgt.icmp.proxy.LocationAwarePingClient">
        <bean class="org.opennms.netmgt.icmp.proxy.impl.LocationAwarePingClientImpl">
            <argument ref="rpcClientFactory" />
            <argument ref="pingProxyRpcModule" />
            <argument ref="pingSweepRpcModule" />
        </bean>
    </service>

</blueprint>
