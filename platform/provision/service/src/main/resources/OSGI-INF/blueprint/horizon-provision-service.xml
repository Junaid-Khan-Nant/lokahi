<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
  xmlns:camel="http://camel.apache.org/schema/blueprint"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder persistent-id="org.opennms.horizon.provision.service" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="scan.endpoint" value="direct:scan"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <camel:camelContext id="provisionCamelContext"  allowUseOriginalMessage="false">
    <camel:contextScan/>
    <camel:template id="scanProducer" defaultEndpoint="{{scan.endpoint}}"/>
  </camel:camelContext>

  <reference id="provisionPersistence" interface="org.opennms.netmgt.provision.persistence.dao.RequisitionRepository"/>

  <reference id="grpcServer" interface="org.opennms.horizon.ipc.rpc.api.RpcClientFactory"/>

  <bean id="provisioner" class="org.opennms.netmgt.provision.service.ProvisionerImpl">
    <argument ref="provisionPersistence"/>
    <argument ref="scanProducer"/>
  </bean>

<!--  <bean id="webDetector" class="org.opennms.netmgt.provision.detector.web.WebDetector"/>-->

  <bean id="serviceRegistry" class="org.opennms.netmgt.provision.service.scan.soa.DefaultServiceRegistry"/>

  <bean id="detectorClientRpcModule" class="org.opennms.netmgt.provision.service.scan.rpc.DetectorClientRpcModule" />

  <bean id="serviceDetectorRegistry" class="org.opennms.netmgt.provision.service.scan.ServiceDetectorRegistryImpl" init-method="afterPropertiesSet">
    <property name="m_serviceRegistry" ref="serviceRegistry"/>
    <property name="m_detectorFactories">
      <set>
        <bean class="org.opennms.netmgt.provision.detector.web.WebDetectorFactory"/>
      </set>
    </property>
  </bean>

  <bean id="locationAwareDetector" class="org.opennms.netmgt.provision.service.scan.rpc.LocationAwareDetectorClientRpcImpl" init-method="afterPropertiesSet">
     <property name="registry" ref="serviceDetectorRegistry"/>
    <property name="detectorClientRpcModule" ref="detectorClientRpcModule"/>
    <property name="rpcClientFactory" ref="grpcServer"/>
<!--    <property name="entityScopeProvider" ref=""/>-->
  </bean>

  <bean id="nodeScanner" class="org.opennms.netmgt.provision.service.scan.NodeScanner" init-method="init">
    <argument ref="provisionCamelContext"/>
    <argument ref="provisioner"/>
    <argument ref="locationAwareDetector"/>
  </bean>

  <service ref="provisioner" interface="org.opennms.netmgt.provision.service.Provisioner"/>

</blueprint>
